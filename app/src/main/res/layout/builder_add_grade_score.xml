<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:text="@string/add_new_grade" />

    <EditText
        android:id="@+id/editTextScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColorHighlight="@color/ClassifyLightBlue"
        android:textColor="@color/Black"
        android:textColorHint="@color/ClassifyLightBlue"
        android:backgroundTint="@color/ClassifyLightBlue"
        android:ems="4"
        android:inputType="numberDecimal" />
</RelativeLayout>